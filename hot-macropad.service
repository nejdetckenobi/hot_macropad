[Unit]
Description=Hot Macropad Daemon
After=graphical-session.target

[Service]
Type=simple
ExecStart=%h/bin/hot-macropad /dev/input/eventX
Restart=on-failure
RestartSec=1

# Ensure we have access to input devices
SupplementaryGroups=input

# Environment can be extended if needed
Environment=XDG_CONFIG_HOME=%h/.config

[Install]
WantedBy=default.target
